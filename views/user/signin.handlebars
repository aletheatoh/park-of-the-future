<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <!-- css stylesheet -->
  <link rel="stylesheet" type="text/css" href="/css/style.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <title>Login</title>
</head>
<body style="background-color: #FFECB3;">

  <div id="signin-form" style="  margin-top: 20px;">
    <div id="cookie-logo-container">
      <img id="cookie-logo" src="img/cookie-logo.png">
    </div>

    <div class="ui center aligned grid">
      <div class="column">
        <h2>Sign in to your account</h2>
        <div class="ui stackable segment">
          <form class="ui large form" method="POST" action="/users/login">
            <div class="ui large form">
              <div class="required field">
                <label class"sign-in-label" >Username</label>
                <div class="sign-in ui left icon input">
                  <i class="user icon"></i>
                  <input id="username-input" type="text" name="username" placeholder="Username">
                </div>
              </div>
              <div class="required field">
                <label class"sign-in-label" >Password</label>
                <div class="password ui left icon input">
                  <i class="lock icon"></i>
                  <input id="password-input" type="password" name="password" placeholder="Password">
                </div>
              </div>
              <button class="ui green compact large button" style="margin: 10 auto;" onclick="window.location.href='/home'"><i class="sign in icon"></i>Sign in</button>
            </div>
          </form>
        </div>

        <!-- FORM VALIDATOR -->
        <div id="form-validator" class="ui error message" style="display:none;">
          <ul id="form-validator-list" class="list">
          </ul>
        </div>

        <div class="ui bottom attached warning message">
          <p>Or, sign in with your social media account</p>
          <button class="ui circular facebook icon button">
            <i class="facebook icon"></i>
          </button>
          <button class="ui circular google plus icon button">
            <i class="google plus icon"></i>
          </button>
          <button class="ui circular twitter icon button">
            <i class="twitter icon"></i>
          </button>
          <p id="new-to-us">New to us? <a href="/users/new"> Sign Up</a> here.</p>
        </div>

      </div>

    </div>

  </div>

  <script>

  // validate form
  $( "form" ).submit(function( event ) {
    // $('#new-to-us').hide();
    // if both a username and password have been entered
    if ( $('#username-input').val() !== "" && $('#password-input').val() !== "") {
      return;
    }

    // display error message
    $('#form-validator').show();
    $( "#form-validator-list" ).empty();
    if ( $('#username-input').val() == "") {
      $( "#form-validator-list" ).append('<li>Please enter a username</li>');
    }

    if ( $('#password-input').val() == "") {
      $( "#form-validator-list" ).append('<li>Please enter a password</li>');
    }

    event.preventDefault();
  });

  </script>

</body>
</html>
